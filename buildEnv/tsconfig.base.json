{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}